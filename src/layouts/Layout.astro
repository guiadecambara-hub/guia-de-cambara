---
interface Props {
	title: string;
	description?: string;
}
const { title, description = "Guia definitivo de Cambará do Sul" } = Astro.props;
---
<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" /> <!-- Isso corrige os acentos -->
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<div class="container header-content">
				<a href="/" class="logo-link">
					<img src="/logo-transparente.webp" alt="Logo Guia de Cambará" class="header-logo" />
				</a>
				<nav class="main-nav">
					<ul>
						<li><a href="/onde-comer">Onde Comer</a></li>
						<li><a href="/onde-ficar">Onde Ficar</a></li>
						<li><a href="/guia-pratico">Guia Prático</a></li>
						<li><a href="/o-que-fazer">O Que Fazer</a></li>
						<li><a href="/sobre-nos">Sobre Nós</a></li>
						<li><a href="/contato">Contato</a></li>
					</ul>
				</nav>
			</div>
		</header>

		<main><slot /></main>

		<footer class="guia-footer">
			<div class="footer-wrapper">
				<div class="footer-section">
					<div class="logo-box">
						<img src="/logo-transparente.webp" alt="Guia de Cambará" />
					</div>
					<p class="bio-text">
						Sua fonte definitiva de informações sobre Cambará do Sul. Conteúdo produzido por especialistas locais para garantir uma experiência segura e inesquecível nos Canyons.
					</p>
				</div>

				<div class="footer-section">
					<h4 class="section-title">Contato e Endereço</h4>
					<div class="contact-details">
						<p><strong>Localização:</strong> Av. Getúlio Vargas, 123 - Centro<br/>Cambará do Sul - RS</p>
						<p><strong>E-mail Oficial:</strong> <a href="mailto:guiadecambara@gmail.com">guiadecambara@gmail.com</a></p>
					</div>
				</div>

				<div class="footer-section">
					<h4 class="section-title">Links Úteis</h4>
					<nav class="footer-nav">
						<a href="/">Página Inicial</a>
						<a href="/onde-comer">Onde Comer</a>
						<a href="/onde-ficar">Onde Ficar</a>
						<a href="/o-que-fazer">O Que Fazer</a>
						<a href="/guia-pratico">Guia Prático</a>
						<a href="/sobre-nos">Sobre Nós</a>
						<a href="/contato">Contato</a>
					</nav>
				</div>
			</div>
			<div class="footer-copyright">
				<p>&copy; {new Date().getFullYear()} Guia de Cambará. O maior portal de turismo da região.</p>
			</div>
		</footer>

		<style is:global>
			:root { --primary-green: #10b981; --dark-blue: #0f172a; }
			body { margin: 0; font-family: system-ui, -apple-system, sans-serif; background-color: #f8fafc; color: #334155; }
			.container { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
			.site-header { background: white; border-bottom: 1px solid #e2e8f0; padding: 10px 0; position: sticky; top: 0; z-index: 100; }
			.header-content { display: flex; justify-content: space-between; align-items: center; }
			.header-logo { width: 200px; height: auto; }
			.main-nav ul { display: flex; list-style: none; gap: 20px; margin: 0; padding: 0; }
			.main-nav a { text-decoration: none; color: var(--dark-blue); font-weight: 600; font-size: 0.9rem; }
			.guia-footer { background-color: var(--dark-blue) !important; color: white !important; padding: 60px 0 20px 0 !important; margin-top: 80px; }
			.footer-wrapper { max-width: 1100px; margin: 0 auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 40px; padding: 0 20px; }
			.logo-box img { width: 150px; height: auto; margin-bottom: 20px; }
			.section-title { color: white; font-size: 1.1rem; margin-bottom: 25px; border-bottom: 2px solid var(--primary-green); display: inline-block; padding-bottom: 5px; }
			.bio-text { font-size: 0.9rem; line-height: 1.6; color: #cbd5e1; }
			.contact-details p, .footer-nav a { font-size: 0.9rem; color: #cbd5e1; margin-bottom: 12px; text-decoration: none; display: block; }
			.footer-nav a:hover { color: var(--primary-green); padding-left: 5px; transition: 0.3s; }
			.footer-copyright { text-align: center; margin-top: 50px; padding-top: 20px; border-top: 1px solid #334155; color: #94a3b8; font-size: 0.8rem; }
		</style>
	</body>
</html>