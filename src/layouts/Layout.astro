---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<Header /> <!-- A peça do topo entra aqui -->
		
		<main>
			<slot /> <!-- O conteúdo da página entra aqui -->
		</main>

		<Footer /> <!-- A peça do rodapé entra aqui -->
	</body>
</html>