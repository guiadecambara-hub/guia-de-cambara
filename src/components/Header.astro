---
// src/components/Header.astro
---
<header class="site-header">
  <div class="container header-content">
    <a href="/" class="logo-link">
      <img src="/logo-transparente.webp" alt="Logo Guia de Cambará" class="header-logo" />
    </a>
    <nav class="main-nav">
      <ul>
        <li><a href="/onde-comer">Onde Comer</a></li>
        <li><a href="/onde-ficar">Onde Ficar</a></li>
        <li><a href="/guia-pratico">Guia Prático</a></li>
        <li><a href="/o-que-fazer">O Que Fazer</a></li>
        <li><a href="/sobre-nos">Sobre Nós</a></li>
        <li><a href="/contato">Contato</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .site-header { 
    background: white; 
    border-bottom: 1px solid #e2e8f0; 
    padding: 15px 0; 
    position: sticky; 
    top: 0; 
    z-index: 100; 
  }
  .header-content { 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
    max-width: 1200px; 
    margin: 0 auto; 
    padding: 0 20px; 
  }
  .header-logo { 
    width: 220px; 
    height: auto; 
  }
  .main-nav ul { 
    display: flex; 
    list-style: none; 
    gap: 20px; /* Espaço entre os links no PC */
    margin: 0; 
    padding: 0; 
  }
  .main-nav a { 
    text-decoration: none; 
    color: #0f172a; 
    font-weight: 600; 
    font-size: 0.9rem; 
    white-space: nowrap; /* Impede que o texto quebre linha */
  }

  /* AJUSTE PARA CELULAR */
  @media (max-width: 1024px) {
    .header-content { 
      flex-direction: column; 
      gap: 15px; 
    }
    .main-nav ul { 
      gap: 10px 15px; 
      justify-content: center; 
      flex-wrap: wrap; 
    }
    .header-logo { width: 160px; }
  }
</style>